<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/part_content_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@id/load_view_loading"
        android:visibility="gone" />

    <include
        layout="@layout/part_content_reload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@id/load_view_reload"
        android:visibility="gone" />

    <include
        layout="@layout/part_content_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@id/load_view_empty" />
</merge>